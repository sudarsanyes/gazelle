<UserControl x:Class="Gazelle.Tools.Documents.OpenToolBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Gazelle.Tools.Documents">
    <StackPanel Orientation="Horizontal"
                Height="81">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button x:Name="OpenFileButton" Grid.Row="0"
                    Padding="8,3,8,3"
                    Background="Transparent"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Gazelle;component/Resources/Images/folder-10.png" />
                    <TextBlock Text="Open"
                               VerticalAlignment="Center"
                               Margin="9,0,0,0" />
                </StackPanel>
            </Button>
            <TextBlock Grid.Row="1" Text="Open" Style="{DynamicResource ResourceKey=RibbonGroupHeader}" />
        </Grid>
        <Border Margin="3,3,8,3"
                Width="1"
                BorderThickness="1"
                BorderBrush="LightGray" />
    </StackPanel>
</UserControl>